.CodeMirror-scroll {
  padding-bottom: 18px;
}

.CodeMirror pre {
  font-family: Consolas, "Source Code Pro", Consolas, "Courier New", Menlo, Monaco, "DejaVu Sans Mono", monospace;
  line-height: 1.3;
}

.CodeMirror .CodeMirror-linenumber {
  line-height: 1.3;
}

.CodeMirror .breakpoint-highlight {
  background: red;
}

.status-bar-editor-widgets {
  display: flex;
  align-items: stretch;
  .editor-widget {
    display: flex;
    align-items: center;
    padding: 0 8px;
  }
}

.mode-widget {
  display: flex;
  position: absolute;
  bottom: 24px;
  min-width: 200px;
  right: 1px;
  flex-direction: column;
  z-index: 201;

  ul {
    max-height: 200px;
    overflow: auto;
  }
}

.htmlPreview {
  overflow: hidden;
  position: relative;
  .preview-iframe-msk {
    position: absolute;
    overflow: auto;
    width: 100%;
    height: 100%;
  }
  iframe {
    position: absolute;
    overflow: auto;
    width: 100%;
    height: 100%;
    border: 0;
    background-color: white;
  }
}

.editor-spinner {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 30px;
  color: #fff;
}
.editor-image-preview {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

#editor_preview_html_preview {
  flex-shrink: 0;
  flex-basis: 0;
  overflow: auto;
  scrollBar();
}
#editor_preview_html_editor {
  flex-shrink: 0;
  flex-basis: 0;
  overflow: auto;
}

.html-editor-container {
  display: flex;
  width: 100%;
  height: 100%;
  .preview-action {
    position: absolute;
    top: 10px;
    right: 20px;
    z-index: 3;
    i {
      color: #999;
    }
    i:nth-child(2) {
      margin-left: 10px;
    }
  }
  .wrap {
    display: flex;
    width: 100%;
    height: 100%;
    .resize-bar {
      position: relative;
    }
  }
}
